<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/app_main_bg</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>



    <style name="RightArrowIcon">
        <item name="android:layout_width">@dimen/d_10</item>
        <item name="android:layout_height">@dimen/d_16</item>
        <item name="android:layout_marginRight">@dimen/d_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/ic_arrow_right</item>
    </style>


    <style name="LightItemLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="LightItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_50</item>
        <item name="android:background">@drawable/selector_item_white</item>
        <item name="android:layout_marginTop">@dimen/d_15</item>
    </style>
</resources>
